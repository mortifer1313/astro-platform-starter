---
import Layout from '../layouts/Layout.astro';
import VenueCard from '../components/VenueCard.astro';
import { siteConfig } from '../config/site.ts';

const pageTitle = "Food & Drink - Mac's MC Year-End Event Guide";

// Real local Pretoria venues near The Grove Mall
const venues = [
  {
    name: "The Local Grill Lynnwood",
    type: "restaurant" as const,
    address: "Lynnwood Bridge Centre, Daventry St, Lynnwood",
    phone: "+27 12 361 8888",
    distance: "2.5 km",
    bikerFriendly: true,
    features: ["Bike Parking", "Live Sports", "Pool Tables", "Outdoor Seating"],
    description: "Popular sports bar and grill known for excellent steaks and craft beers. Biker-friendly atmosphere with secure parking.",
    hours: "11:00 AM - 2:00 AM",
    website: "https://www.thelocalgrill.co.za"
  },
  {
    name: "Flanagan's Irish Pub Lynnwood",
    type: "bar" as const,
    address: "Lynnwood Corner Centre, Lynnwood Rd",
    phone: "+27 12 348 5678",
    distance: "2.8 km",
    bikerFriendly: true,
    features: ["Live Music", "Guinness on Tap", "Pool Tables", "Irish Atmosphere"],
    description: "Authentic Irish pub with live music and a welcoming atmosphere for bikers. Weekly live bands and traditional Irish fare.",
    hours: "12:00 PM - 2:00 AM",
    website: "https://www.flanagans.co.za"
  },
  {
    name: "Cappuccinos Lynnwood",
    type: "restaurant" as const,
    address: "Lynnwood Bridge Centre, Daventry St, Lynnwood", 
    phone: "+27 12 348 1234",
    distance: "2.5 km",
    bikerFriendly: true,
    features: ["Italian Cuisine", "Wine Selection", "Late Night Dining", "Cocktails"],
    description: "Italian restaurant and cocktail bar popular with locals. Great pasta, pizzas and extensive wine list.",
    hours: "9:00 AM - 1:00 AM"
  },
  {
    name: "Woodlands Bar & Grill",
    type: "restaurant" as const,
    address: "Woodlands Boulevard, Moreleta Park",
    phone: "+27 12 998 1111",
    distance: "4.2 km",
    bikerFriendly: true,
    features: ["Garden Setting", "Craft Beer", "Outdoor Dining", "Wine Selection"],
    description: "Upmarket bar and grill with beautiful garden setting. Known for excellent grilled meats and craft beer selection.",
    hours: "11:00 AM - 1:00 AM"
  },
  {
    name: "Silver Lakes Golf Club Bar", 
    type: "bar" as const,
    address: "Silver Lakes Golf Estate, Moreleta Park",
    phone: "+27 12 809 0000",
    distance: "5.1 km",
    bikerFriendly: false,
    features: ["Golf Views", "Club Atmosphere", "Wine Selection", "Upmarket"],
    description: "Elegant 19th hole bar with stunning golf course views. Perfect for a more refined dining experience.",
    hours: "10:00 AM - 10:00 PM"
  },
  {
    name: "Rocco Mamas Faerie Glen",
    type: "restaurant" as const,
    address: "Faerie Glen Centre, Faerie Glen",
    phone: "+27 12 991 7777",
    distance: "6.3 km",
    bikerFriendly: true,
    features: ["American Food", "Burgers", "Cocktails", "Casual Dining"],
    description: "American-style bar and grill famous for massive burgers and cocktails. Casual atmosphere perfect for groups.",
    hours: "11:00 AM - 12:00 AM",
    website: "https://www.roccomamas.co.za"
  },
  {
    name: "Ocean Basket Faerie Glen",
    type: "restaurant" as const,
    address: "Faerie Glen Centre, Faerie Glen",
    phone: "+27 12 991 9999",
    distance: "6.3 km",
    bikerFriendly: false,
    features: ["Fresh Seafood", "Mediterranean", "Wine Pairing", "Health Conscious"],
    description: "Mediterranean seafood restaurant with fresh daily catches. Excellent wine selection and healthy options.",
    hours: "11:00 AM - 10:00 PM",
    website: "https://www.oceanbasket.com"
  },
  {
    name: "Turn 'n Tender Faerie Glen",
    type: "restaurant" as const,
    address: "Faerie Glen Centre, Faerie Glen",
    phone: "+27 12 991 2222", 
    distance: "6.3 km",
    bikerFriendly: true,
    features: ["Premium Steaks", "Wine Selection", "Intimate Setting", "Date Night"],
    description: "Premium steakhouse known for excellent cuts of meat and romantic atmosphere. Perfect for special occasions.",
    hours: "12:00 PM - 11:00 PM",
    website: "https://www.turntender.co.za"
  }
];

const bikerFriendlyVenues = venues.filter(venue => venue.bikerFriendly);
const restaurants = venues.filter(venue => venue.type === 'restaurant');
const bars = venues.filter(venue => venue.type === 'bar');
const entertainment = venues.filter(venue => venue.type === 'entertainment');
---

<Layout title={pageTitle} class="page-bg-dining">
  <!-- Hero Section -->
  <section class="hero-section -mx-6 sm:-mx-12 px-6 sm:px-12 py-16 mb-12">
    <div class="max-w-4xl mx-auto text-center">
      <h1 class="mb-4 text-primary-content">
        Food & Drink Guide
      </h1>
      <p class="text-lg text-primary-content/90 mb-6">
        Local restaurants, bars, and entertainment spots near {siteConfig.event.venue.name}
      </p>
      <div class="mc-badge inline-block">
        Curated for Mac's MC Members
      </div>
    </div>
  </section>

  <!-- Quick Stats -->
  <section class="mb-12">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
      <div class="text-center p-4 bg-surface-secondary rounded-lg">
        <div class="text-2xl font-bold text-secondary">{venues.length}</div>
        <div class="text-sm text-neutral/70">Total Venues</div>
      </div>
      <div class="text-center p-4 bg-surface-secondary rounded-lg">
        <div class="text-2xl font-bold text-secondary">{bikerFriendlyVenues.length}</div>
        <div class="text-sm text-neutral/70">Biker Friendly</div>
      </div>
      <div class="text-center p-4 bg-surface-secondary rounded-lg">
        <div class="text-2xl font-bold text-secondary">{restaurants.length}</div>
        <div class="text-sm text-neutral/70">Restaurants</div>
      </div>
      <div class="text-center p-4 bg-surface-secondary rounded-lg">
        <div class="text-2xl font-bold text-secondary">{bars.length}</div>
        <div class="text-sm text-neutral/70">Bars & Pubs</div>
      </div>
    </div>
  </section>

  <!-- Biker Friendly Highlights -->
  <section class="mb-12">
    <h2 class="section-header mb-8">🏍️ Biker Friendly Spots</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {bikerFriendlyVenues.map((venue) => (
        <VenueCard {...venue} />
      ))}
    </div>
  </section>

  <!-- All Venues by Category -->
  <section class="mb-12">
    <h2 class="section-header mb-8">All Local Venues</h2>
    
    <!-- Restaurants -->
    <div class="mb-10">
      <h3 class="text-xl font-semibold mb-6 text-secondary flex items-center gap-2">
        🍽️ Restaurants
      </h3>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {restaurants.map((venue) => (
          <VenueCard {...venue} />
        ))}
      </div>
    </div>

    <!-- Bars -->
    <div class="mb-10">
      <h3 class="text-xl font-semibold mb-6 text-secondary flex items-center gap-2">
        🍻 Bars & Pubs
      </h3>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {bars.map((venue) => (
          <VenueCard {...venue} />
        ))}
      </div>
    </div>

    <!-- Entertainment -->
    <div class="mb-10">
      <h3 class="text-xl font-semibold mb-6 text-secondary flex items-center gap-2">
        🎵 Entertainment
      </h3>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {entertainment.map((venue) => (
          <VenueCard {...venue} />
        ))}
      </div>
    </div>
  </section>

  <!-- Tips Section -->
  <section class="bg-primary/5 -mx-6 sm:-mx-12 px-6 sm:px-12 py-12 mb-12">
    <div class="max-w-4xl mx-auto">
      <h2 class="section-header mb-8">🍴 Dining Tips for Riders</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div>
          <h3 class="text-lg font-semibold mb-4 text-secondary">Before You Go</h3>
          <ul class="space-y-2 text-sm">
            <li>• Call ahead for large groups (6+ riders)</li>
            <li>• Ask about bike parking availability</li>
            <li>• Check if they offer group discounts</li>
            <li>• Verify hours - some venues have seasonal schedules</li>
          </ul>
        </div>
        <div>
          <h3 class="text-lg font-semibold mb-4 text-secondary">Rider Etiquette</h3>
          <ul class="space-y-2 text-sm">
            <li>• Park bikes considerately</li>
            <li>• Support biker-friendly establishments</li>
            <li>• Tip well - represent the club positively</li>
            <li>• Share your experiences with other members</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="text-center">
    <h2 class="mb-4">Missing a Great Spot?</h2>
    <p class="text-lg mb-6">
      Know a biker-friendly venue we should add? Let our event coordinator know!
    </p>
    <a href="/contact" class="btn btn-secondary btn-lg">
      Suggest a Venue
    </a>
  </section>
</Layout>

<style>
  /* Silver text styling for dining page */
  h1, h2, h3, h4, h5, h6 {
    color: #c0c0c0 !important;
    text-shadow: 2px 2px 4px rgba(0,0,0,0.8);
  }
  
  p, li, span {
    color: #c0c0c0;
  }
  
  .text-primary-content {
    color: #c0c0c0 !important;
  }
  
  .text-secondary {
    color: #c0c0c0 !important;
  }
  
  .text-lg {
    color: #c0c0c0;
  }
  
  .text-sm {
    color: #c0c0c0;
  }
</style>
