---
import Layout from '../layouts/Layout.astro';
import { siteConfig } from '../config/site.ts';

const pageTitle = "Accommodation - Mac's MCC Event Guide";
---

<Layout title={pageTitle} class="page-bg-accommodation">
  <!-- Hero Section -->
  <section class="hero-section -mx-6 sm:-mx-12 px-6 sm:px-12 py-16 mb-12">
    <div class="max-w-4xl mx-auto text-center">
      <h1 class="mb-4 text-primary-content">
        ğŸ¨ Accommodation Guide
      </h1>
      <p class="text-lg text-primary-content/90 mb-6">
        Find the perfect place to stay near {siteConfig.event.venue.name}
      </p>
      <div class="mc-badge inline-block">
        Mac's MCC Event Accommodation
      </div>
    </div>
  </section>

  <!-- Accommodation Areas -->
  <section class="mb-12">
    <h2 class="section-header mb-8">ğŸ˜ï¸ Accommodation Areas</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      {siteConfig.accommodationAreas.map((area) => (
        <div class="card hover:shadow-2xl transition-all duration-300 hover:-translate-y-1">
          <h3 class="text-xl font-bold mb-2 text-accent">ğŸ˜ï¸ {area.name}</h3>
          <div class="bg-primary text-accent px-3 py-1 rounded-full inline-block text-sm font-semibold mb-3">
            {area.distance}
          </div>
          <p class="mb-2"><strong class="text-secondary">Perfect For:</strong> {area.perfectFor}</p>
          <p class="text-neutral-content">{area.description}</p>
        </div>
      ))}
    </div>
  </section>

  <!-- Price Ranges -->
