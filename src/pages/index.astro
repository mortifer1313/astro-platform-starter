---
import Layout from '../layouts/Layout.astro';
import { siteConfig } from '../config/site.ts';
---

<Layout title={siteConfig.title}>
    <!-- Event Info Section -->
    <section class="hero-section -mx-6 sm:-mx-12 px-6 sm:px-12 py-16 mb-12">
        <div class="max-w-4xl mx-auto text-center">
            <h1 class="mb-6 text-primary-content">{siteConfig.event.name}</h1>
            <div class="bg-black/30 rounded-lg p-6 border-2 border-accent">
                <p class="text-lg mb-2"><strong>📍 Venue:</strong> {siteConfig.event.venue.name}</p>
                <p class="text-lg mb-2"><strong>📍 Address:</strong> {siteConfig.event.venue.address}</p>
                <p class="text-lg"><strong>📅 Date:</strong> {siteConfig.event.dates}</p>
            </div>
        </div>
    </section>

    <!-- Accommodation Areas -->
    <section class="mb-12">
        <h2 class="section-header mb-8">🏨 Accommodation Areas</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            {siteConfig.accommodationAreas.map((area) => (
                <div class="bg-gradient-to-r from-accent to-secondary text-primary p-6 rounded-lg">
                    <h3 class="text-xl font-bold mb-2">🏘️ {area.name}</h3>
                    <div class="bg-primary text-accent px-3 py-1 rounded-full inline-block text-sm font-semibold mb-3">
                        {area.distance}
                    </div>
                    <p class="mb-2"><strong>Perfect For:</strong> {area.perfectFor}</p>
                    <p>{area.description}</p>
                </div>
            ))}
        </div>
    </section>

    <!-- Price Ranges -->
    <section class="mb-12">
        <h2 class="section-header mb-8">💰 Price Ranges (Per Night)</h2>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
            <div class="card text-center">
                <div class="text-secondary font-bold mb-2">🏨 HOTELS</div>
                <div class="bg-accent text-accent-content px-4 py-2 rounded-full font-bold">R800 - R2500+</div>
            </div>
            <div class="card text-center">
                <div class="text-secondary font-bold mb-2">🏡 GUESTHOUSES</div>
                <div class="bg-accent text-accent-content px-4 py-2 rounded-full font-bold">R400 - R1200</div>
            </div>
            <div class="card text-center">
                <div class="text-secondary font-bold mb-2">🏠 SELF-CATERING</div>
                <div class="bg-accent text-accent-content px-4 py-2 rounded-full font-bold">R300 - R800</div>
            </div>
            <div class="card text-center">
                <div class="text-secondary font-bold mb-2">🎒 BUDGET</div>
                <div class="bg-accent text-accent-content px-4 py-2 rounded-full font-bold">R150 - R400</div>
            </div>
        </div>
    </section>

    <!-- Booking Links -->
    <section class="mb-12">
        <h2 class="section-header mb-8">🔍 Book Now</h2>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
            <a href="https://www.booking.com/searchresults.html?ss=The+Grove+Mall+Pretoria" 
               target="_blank" class="btn btn-secondary text-center">
                📱 Booking.com
            </a>
            <a href="https://www.airbnb.com/s/Equestria--Pretoria--South-Africa" 
               target="_blank" class="btn btn-secondary text-center">
                🏠 Airbnb
            </a>
            <a href="https://www.lekkeslaap.co.za/accommodation/pretoria" 
               target="_blank" class="btn btn-secondary text-center">
                🇿🇦 LekkeSlaap
            </a>
            <a href="https://www.google.com/maps/search/hotels+near+The+Grove+Mall+Pretoria/" 
               target="_blank" class="btn btn-secondary text-center">
                🗺️ Google Maps
            </a>
        </div>
    </section>

    <!-- Getting There -->
    <section class="mb-12">
        <h2 class="section-header mb-8">🚗 Getting There</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="card">
                <h4 class="text-secondary font-bold mb-4">🛣️ From Johannesburg:</h4>
                <ol class="list-decimal list-inside space-y-2 mb-4">
                    <li>Take N1 North towards Pretoria</li>
                    <li>Exit at Lynnwood Road (Exit 367)</li>
                    <li>Follow signs to Equestria/The Grove</li>
                    <li>Turn onto The Highway (M18)</li>
                    <li>The Grove Mall will be on your right</li>
                </ol>
                <p><strong>Drive Time:</strong> 45-60 minutes</p>
            </div>
            
            <div class="card">
                <h4 class="text-secondary font-bold mb-4">🏙️ From Pretoria CBD:</h4>
                <ol class="list-decimal list-inside space-y-2 mb-4">
                    <li>Head east on Church Street</li>
                    <li>Turn right onto Lynnwood Road</li>
                    <li>Continue to The Highway (M18)</li>
                    <li>Turn left onto The Highway</li>
                    <li>The Grove Mall will be on your left</li>
                </ol>
                <p><strong>Drive Time:</strong> 15-20 minutes</p>
            </div>
        </div>
    </section>

    <!-- Booking Tips -->
    <section class="mb-12">
        <h2 class="section-header mb-8">💡 Booking Tips</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="card">
                <h4 class="text-secondary font-semibold mb-3">📅 Book Early</h4>
                <p class="text-sm">Secure better rates and availability for weekend events</p>
            </div>
            <div class="card">
                <h4 class="text-secondary font-semibold mb-3">🔄 Compare Prices</h4>
                <p class="text-sm">Check multiple platforms and call direct for better rates</p>
            </div>
            <div class="card">
                <h4 class="text-secondary font-semibold mb-3">🅿️ Confirm Parking</h4>
                <p class="text-sm">Ensure secure motorcycle parking is available</p>
            </div>
            <div class="card">
                <h4 class="text-secondary font-semibold mb-3">⭐ Read Reviews</h4>
                <p class="text-sm">Check recent guest experiences for cleanliness and service</p>
            </div>
            <div class="card">
                <h4 class="text-secondary font-semibold mb-3">❌ Cancellation Policy</h4>
                <p class="text-sm">Understand terms in case plans change</p>
            </div>
            <div class="card">
                <h4 class="text-secondary font-semibold mb-3">📍 Verify Location</h4>
                <p class="text-sm">Double-check distance to venue and transport options</p>
            </div>
        </div>
    </section>

    <!-- Emergency Contacts -->
    <section class="bg-secondary/10 -mx-6 sm:-mx-12 px-6 sm:px-12 py-12 mb-12">
        <div class="max-w-4xl mx-auto">
            <h2 class="section-header mb-8 text-center">📞 Emergency Contacts</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <div class="card-dark text-center">
                    <div class="mb-2">🚨 Police</div>
                    <div class="text-2xl font-bold text-accent">{siteConfig.emergency.police}</div>
                </div>
                <div class="card-dark text-center">
                    <div class="mb-2">🏥 Medical</div>
                    <div class="text-2xl font-bold text-accent">{siteConfig.emergency.medical}</div>
                </div>
                <div class="card-dark text-center">
                    <div class="mb-2">🚔 Local Police</div>
                    <div class="text-2xl font-bold text-accent">{siteConfig.emergency.localPolice}</div>
                </div>
            </div>
        </div>
    </section>

    <!-- Share Section -->
    <section class="text-center bg-accent/20 -mx-6 sm:-mx-12 px-6 sm:px-12 py-16">
        <h2 class="mb-4">📤 Share This Guide</h2>
        <p class="text-lg mb-8">Send this page to fellow MAC'S MC members!</p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <button onclick="shareGuide()" class="btn btn-primary">
                📱 Share Link
            </button>
            <button onclick="copyLink()" class="btn btn-outline">
                📋 Copy Link
            </button>
        </div>
    </section>
</Layout>

<script>
function shareGuide() {
    if (navigator.share) {
        navigator.share({
            title: "MAC'S MC - Accommodation Guide",
            text: "MAC'S MC End-Year Event Accommodation Guide - Last Weekend November 2024",
            url: window.location.href
        }).catch(console.error);
    } else {
        copyLink();
    }
}

function copyLink() {
    navigator.clipboard.writeText(window.location.href).then(function() {
        alert('Link copied to clipboard! Share it with other members.');
    }).catch(function() {
        prompt('Copy this link:', window.location.href);
    });
}
</script>
