---
interface Props {
  width?: number;
  height?: number;
  class?: string;
}

const { width = 200, height = 60, class: className = '' } = Astro.props;
---

<div class={`inline-flex items-center gap-4 ${className}`}>
  <!-- Mac's MCC Logo/Patch -->
  <div class="relative">
    <img src="/images/1er-patch-1.png" alt="Mac's MCC" class="w-16 h-16 object-contain" />
  </div>
  
  <!-- Club Name -->
  <div class="flex flex-col">
    <span class="text-3xl font-bold text-accent drop-shadow-lg" style="font-family: var(--font-display); text-transform: uppercase; letter-spacing: 0.15em; text-shadow: 2px 2px 4px rgba(0,0,0,0.8);">
      Mac's MCC
    </span>
    <span class="text-base text-primary-content font-semibold tracking-wider" style="font-family: var(--font-sans); text-shadow: 1px 1px 2px rgba(0,0,0,0.8);">
      Accommodation Guide
    </span>
  </div>
</div>
