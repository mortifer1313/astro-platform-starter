---
interface Props {
  width?: number;
  height?: number;
  class?: string;
}

const { width = 200, height = 60, class: className = '' } = Astro.props;
---

<div class={`inline-flex items-center gap-6 ${className}`}>
  <!-- Event Title -->
  <div class="flex flex-col">
    <span class="text-2xl font-bold text-accent tracking-wider" style="font-family: var(--font-display); text-shadow: 2px 2px 4px rgba(0,0,0,0.8);">
      Event Guide
    </span>
    <span class="text-sm text-primary-content font-semibold tracking-wider" style="font-family: var(--font-sans); text-shadow: 1px 1px 2px rgba(0,0,0,0.8);">
      Accommodation & Dining
    </span>
  </div>
</div>
