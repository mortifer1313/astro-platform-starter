---
import Logo from '../components/Logo.astro';
import { siteConfig } from '../config/site.ts';

const navItems = siteConfig.navigation;
---

<header class="hero-section px-6 sm:px-12">
    <nav class="flex flex-wrap items-center justify-between gap-4 pt-6 pb-8 max-w-6xl mx-auto">
        <a href="/" class="flex-shrink-0">
            <Logo />
        </a>
        
        <div class="flex flex-wrap items-center gap-6">
            {
                !!navItems?.length && (
                    <ul class="hidden md:flex flex-wrap gap-x-6 gap-y-2">
                        {navItems.map((item) => (
                            <li>
                                <a href={item.href} class="text-primary-content hover:text-accent transition-colors duration-200 font-medium uppercase tracking-wider text-sm">
                                    {item.name}
                                </a>
                            </li>
                        ))}
                    </ul>
                )
            }
            
            <a href="/contact" class="btn btn-secondary btn-lg">
                Register Now
            </a>
        </div>
        
        <!-- Mobile menu button -->
        <button class="md:hidden text-primary-content p-2" aria-label="Menu">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
        </button>
    </nav>
    
    <!-- Mobile menu (hidden by default) -->
    <div class="md:hidden px-6 pb-6">
        <ul class="flex flex-col gap-4">
            {navItems.map((item) => (
                <li>
                    <a href={item.href} class="text-primary-content hover:text-accent transition-colors duration-200 font-medium uppercase tracking-wider">
                        {item.name}
                    </a>
                </li>
            ))}
        </ul>
    </div>
</header>
