---

<section class="mb-12">
  <h2 class="section-header mb-8">🍽️ Food & Drink</h2>
  
  <!-- Areas with venues -->
  <div class="space-y-8">
    
    <!-- Lynnwood -->
    <div>
      <h3 class="text-2xl font-bold text-accent mb-4">🏙️ Lynnwood</h3>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        {venues.filter(venue => venue.area === "Lynnwood").map((venue) => (
          <div class="card">
            <h4 class="font-bold text-secondary mb-2">{venue.name}</h4>
            <p class="text-sm text-accent font-semibold mb-2">{venue.type}</p>
            <p class="text-sm mb-2">{venue.specialty}</p>
            <p class="text-xs text-neutral mb-2">📍 {venue.address}</p>
            <p class="text-xs text-neutral mb-3">📞 {venue.phone}</p>
            <div class="flex flex-wrap gap-1">
              {venue.features.map((feature) => (
                <span class="bg-accent/20 text-accent px-2 py-1 rounded text-xs">{feature}</span>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Moreleta Park -->
    <div>
      <h3 class="text-2xl font-bold text-accent mb-4">🌳 Moreleta Park</h3>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        {venues.filter(venue => venue.area === "Moreleta Park").map((venue) => (
          <div class="card">
            <h4 class="font-bold text-secondary mb-2">{venue.name}</h4>
            <p class="text-sm text-accent font-semibold mb-2">{venue.type}</p>
            <p class="text-sm mb-2">{venue.specialty}</p>
            <p class="text-xs text-neutral mb-2">📍 {venue.address}</p>
            <p class="text-xs text-neutral mb-3">📞 {venue.phone}</p>
            <div class="flex flex-wrap gap-1">
              {venue.features.map((feature) => (
                <span class="bg-accent/20 text-accent px-2 py-1 rounded text-xs">{feature}</span>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Faerie Glen -->
    <div>
      <h3 class="text-2xl font-bold text-accent mb-4">🧚 Faerie Glen</h3>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        {venues.filter(venue => venue.area === "Faerie Glen").map((venue) => (
          <div class="card">
            <h4 class="font-bold text-secondary mb-2">{venue.name}</h4>
            <p class="text-sm text-accent font-semibold mb-2">{venue.type}</p>
            <p class="text-sm mb-2">{venue.specialty}</p>
            <p class="text-xs text-neutral mb-2">📍 {venue.address}</p>
            <p class="text-xs text-neutral mb-3">📞 {venue.phone}</p>
            <div class="flex flex-wrap gap-1">
              {venue.features.map((feature) => (
                <span class="bg-accent/20 text-accent px-2 py-1 rounded text-xs">{feature}</span>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>

  </div>
  
  <!-- Tips for Riders -->
  <div class="mt-8 p-6 bg-gradient-to-r from-secondary/20 to-accent/20 rounded-lg border-l-4 border-secondary">
    <h3 class="text-accent font-bold mb-4">🏍️ Tips for MAC'S MC Members</h3>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm">
      <div>
        <strong class="text-secondary">🚫 Ride Safe:</strong> 
        <span class="text-neutral-content">Always designate a sober rider</span>
      </div>
      <div>
        <strong class="text-secondary">🅿️ Bike Parking:</strong> 
        <span class="text-neutral-content">Most venues have secure parking</span>
      </div>
      <div>
        <strong class="text-secondary">👥 Group Bookings:</strong> 
        <span class="text-neutral-content">Call ahead for large groups</span>
      </div>
      <div>
        <strong class="text-secondary">💰 Club Discounts:</strong> 
        <span class="text-neutral-content">Ask about motorcycle club deals</span>
      </div>
    </div>
  </div>
</section>
