    phone: "+27 12 991 7777",
    specialty: "American Style Bar",
    features: ["Burgers", "Cocktails", "Casual Dining"]
  },
  {
    name: "Ocean Basket Faerie Glen",
    type: "Seafood Restaurant",
    area: "Faerie Glen", 
