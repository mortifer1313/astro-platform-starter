  // Lynnwood venues
  {
    name: "The Local Grill Lynnwood",
    type: "Restaurant",
    area: "Lynnwood",
    address: "Lynnwood Bridge Centre, Daventry St",
    phone: "+27 12 361 8888",
    specialty: "Steaks & Sports Bar",
    features: ["Live Sports", "Pool Tables", "Outdoor Seating"]
  },
  {
    name: "Cappuccinos Lynnwood", 
    type: "Restaurant & Bar",
    area: "Lynnwood",
    address: "Lynnwood Bridge Centre, Daventry St",
    phone: "+27 12 348 1234",
    specialty: "Italian Food & Cocktails",
    features: ["Late Night", "Wine Selection", "Italian Cuisine"]
  },
  {
    name: "Flanagan's Irish Pub",
    type: "Pub",
    area: "Lynnwood", 
    address: "Lynnwood Corner Centre",
    phone: "+27 12 348 5678",
    specialty: "Irish Pub with Live Music",
    features: ["Live Music", "Guinness", "Pool Tables"]
  },
  
  // Moreleta Park venues
  {
    name: "Woodlands Bar & Grill",
    type: "Bar & Grill",
    area: "Moreleta Park",
    address: "Woodlands Boulevard",
